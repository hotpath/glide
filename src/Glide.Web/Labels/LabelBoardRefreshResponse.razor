@using Glide.Web.Columns
@if (Label != null)
{
    <!-- Update the label badge in the modal -->
    <LabelBadge Label="@Label"/>
}

@if (Columns != null)
{
    <!-- Refresh the kanban board using out-of-band swap -->
    <div hx-swap-oob="innerHTML:#kanban-board">
        <ColumnLayout Columns="@Columns"/>
    </div>
}

@if (Labels != null)
{
    <!-- Refresh the filter labels using out-of-band swap -->
    <div hx-swap-oob="innerHTML:#filter-labels">
        <LabelFilterList Labels="@Labels"/>
    </div>
}

@code {
    [Parameter] public LabelView? Label { get; set; }

    [Parameter] public IEnumerable<ColumnView>? Columns { get; set; }

    [Parameter] public IEnumerable<LabelView>? Labels { get; set; }
}
