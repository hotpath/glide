@using Markdig
@using Task = Glide.Data.Tasks.Task
<form class="modal-task-form" hx-put="/tasks/@Task.Id" hx-swap="outerHTML" hx-target="#task-@Task.Id"
      hx-on::after-request="if(event.detail.successful) closeModal()">
    <div class="form-group">
        <label for="task-title">Title</label>
        <input type="text" id="task-title" name="title" value="@Task.Title" required>
    </div>
    <div class="form-group">
        <label for="task-description">Description</label>
        <textarea id="task-description" name="description" oninput="updateMarkdownPreview()"
                  placeholder="Add a description...">@Task.Description</textarea>
        <div class="markdown-preview-label">Preview:</div>
        <div id="markdown-preview" class="markdown-preview">
            <div id="preview-content">
                @if (!string.IsNullOrWhiteSpace(Task.Description))
                {
                    @((MarkupString)Markdown.ToHtml(Task.Description, TaskController.Pipeline))
                }
            </div>
        </div>
    </div>
    <div class="form-actions">
        <button type="button" class="btn-delete" hx-delete="/tasks/@Task.Id"
                hx-target="#task-@Task.Id"
                hx-swap="outerHTML"
                hx-on::after-request="if(event.detail.successful){ updateTaskCounts(); closeModal(); }"
                hx-confirm="Delete this task?">Delete
        </button>
        <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
        <button type="submit" class="btn-save">Save</button>
    </div>
</form>

@code{
    [Parameter] public required Task Task { get; set; }
}