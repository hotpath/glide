<div class="board-user-management-modal modal" id="board-user-management" onclick="closeBoardUserManagement(event)">
    <div class="modal-content" onclick="event.stopPropagation()">
        <div class="modal-header">
            <h3>Manage Board Members</h3>
            <button class="modal-close" onclick="closeBoardUserManagement()">&times;</button>
        </div>

        <div class="modal-body">
            <!-- Add user form -->
            <div class="add-user-section">
                <h4>Add Member</h4>
                <form id="add-user-form" class="user-search-form" novalidate>
                    <div class="form-group">
                        <label for="email-search-input">Search by Email</label>
                        <div class="search-wrapper">
                            <input type="email"
                                   id="email-search-input"
                                   placeholder="Enter email address"
                                   autocomplete="off"
                                   class="search-input">
                            <div id="search-results" class="search-results"></div>
                        </div>
                    </div>

                    <div id="selected-user-display" class="selected-user-display" style="display: none;">
                        <div class="selected-user-info">
                            <strong id="selected-user-email"></strong>
                            <small id="selected-user-name"></small>
                        </div>
                        <button type="button" class="btn-clear-selection" onclick="clearUserSelection()">Clear</button>
                    </div>

                    <div class="form-group">
                        <label for="new-user-role">Role</label>
                        <select id="new-user-role" name="new-user-role" class="role-select">
                            <option value="false">Member</option>
                            <option value="true">Owner</option>
                        </select>
                    </div>

                    <input type="hidden" id="selected-user-id" value="">
                    <button type="submit" class="btn-save" id="add-user-button" disabled>Add Member</button>
                </form>
            </div>

            <hr>

            <!-- Current members list -->
            <div class="members-section">
                <h4>Board Members</h4>
                <div id="board-members-list" class="members-list">
                    <div class="loading">Loading members...</div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
