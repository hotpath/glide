<script>
    let boardUserManagementBoardId = null;
    let searchTimeout = null;

    function openBoardUserManagement(boardId) {
        boardUserManagementBoardId = boardId;
        const modal = document.getElementById('board-user-management');
        modal.classList.add('modal-open');
        document.body.style.overflow = 'hidden';

        // Load board members
        loadBoardMembers(boardId);

        // Setup email input with search
        const emailInput = document.getElementById('email-search-input');
        emailInput.value = '';
        emailInput.focus();
    }

    function closeBoardUserManagement(event) {
        if (event && event.target.id !== 'board-user-management') return;

        const modal = document.getElementById('board-user-management');
        modal.classList.remove('modal-open');
        document.body.style.overflow = '';
        document.getElementById('add-user-form').reset();
        document.getElementById('search-results').classList.remove('show');
        clearUserSelection();
    }

    function loadBoardMembers(boardId) {
        fetch('/boards/' + boardId + '/users')
            .then(r => r.json())
            .then(users => {
                const membersList = document.getElementById('board-members-list');
                membersList.innerHTML = '';

                users.forEach(user => {
                    const item = document.createElement('div');
                    item.innerHTML = renderMemberItem(boardId, user);
                    membersList.appendChild(item.firstElementChild);
                });

                htmx.process(membersList);
            })
            .catch(error => {
                console.error('Failed to load board members:', error);
                document.getElementById('board-members-list').innerHTML = '<div class="error-message">Failed to load members</div>';
            });
    }

    function searchUsers(query) {
        if (!query || query.trim().length < 2) {
            document.getElementById('search-results').classList.remove('show');
            return;
        }

        fetch('/boards/search-users?q=' + encodeURIComponent(query))
            .then(r => r.json())
            .then(users => {
                const resultsContainer = document.getElementById('search-results');
                resultsContainer.innerHTML = '';

                if (users.length === 0) {
                    resultsContainer.innerHTML = '<div class="search-result-item" style="color: #999; cursor: default;">No users found</div>';
                    resultsContainer.classList.add('show');
                    return;
                }

                users.forEach(user => {
                    const item = document.createElement('div');
                    item.className = 'search-result-item';
                    item.onclick = () => selectUser(user.id, user.email, user.displayName);

                    const displayName = user.displayName || '(no name)';
                    item.innerHTML = `
                    <div class="search-result-email">${escapeHtml(user.email)}</div>
                    <div class="search-result-name">${escapeHtml(displayName)}</div>
                `;

                    resultsContainer.appendChild(item);
                });

                resultsContainer.classList.add('show');
            })
            .catch(error => {
                console.error('Search failed:', error);
            });
    }

    function renderMemberItem(boardId, user) {
        const role = user.isOwner ? 'Owner' : 'Member';
        const roleClass = user.isOwner ? 'owner' : '';
        const newRole = user.isOwner ? 'Member' : 'Owner';

        return `
        <div class="member-item" id="member-${user.userId}">
            <div class="member-info">
                <span class="member-username">${escapeHtml(user.email)}</span>
                <span class="member-role ${roleClass}">${role}</span>
            </div>
            <div class="member-actions">
                <button type="button" class="btn-role-toggle" 
                    hx-put="/boards/${boardId}/users/${user.userId}" 
                    hx-vals='{"isOwner": ${!user.isOwner}}' 
                    hx-target="#member-${user.userId}"
                    hx-confirm="Change ${escapeHtml(user.email)} to ${newRole}?">
                    Make ${newRole}
                </button>
                <button type="button" class="btn-remove-member" onclick="removeUserFromBoard('${boardId}', '${user.userId}', '${user.email}')">Remove</button>
            </div>
        </div>
    `;
    }

    function selectUser(userId, email, displayName) {
        document.getElementById('selected-user-id').value = userId;
        document.getElementById('email-search-input').value = email;
        document.getElementById('selected-user-email').textContent = email;
        document.getElementById('selected-user-name').textContent = displayName || '(no name)';
        document.getElementById('selected-user-display').style.display = 'flex';
        document.getElementById('search-results').classList.remove('show');
        document.getElementById('add-user-button').disabled = false;
    }

    function clearUserSelection() {
        document.getElementById('selected-user-id').value = '';
        document.getElementById('email-search-input').value = '';
        document.getElementById('selected-user-display').style.display = 'none';
        document.getElementById('add-user-button').disabled = true;
    }

    function removeUserFromBoard(boardId, userId, userEmail) {
        if (confirm(`Remove ${escapeHtml(userEmail)} from the board?`)) {
            fetch(`/boards/${boardId}/users/${userId}`, {
                method: 'DELETE'
            })
                .then(r => {
                    if (r.ok) {
                        loadBoardMembers(boardId);
                    } else {
                        alert('Failed to remove user');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to remove user');
                });
        }
    }

    function escapeHtml(text) {
        if (!text) return '';
        const map = {
            '&': '&amp;',
            '<': '&lt;',
            '>': '&gt;',
            '"': '&quot;',
            "'": '&#039;'
        };
        return text.replace(/[&<>"']/g, m => map[m]);
    }

    // Setup form submission
    document.addEventListener('DOMContentLoaded', function () {
        // Email search with debounce
        const emailInput = document.getElementById('email-search-input');
        if (emailInput) {
            emailInput.addEventListener('input', function (e) {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    searchUsers(e.target.value);
                }, 300);
            });

            // Hide results when clicking outside
            document.addEventListener('click', function (e) {
                if (e.target !== emailInput && !e.target.closest('.search-results')) {
                    document.getElementById('search-results').classList.remove('show');
                }
            });
        }

        // Form submission
        const form = document.getElementById('add-user-form');
        if (form) {
            form.addEventListener('submit', function (e) {
                e.preventDefault();

                const userId = document.getElementById('selected-user-id').value;
                const isOwner = document.getElementById('new-user-role').value === 'true';

                if (!userId || !boardUserManagementBoardId) {
                    alert('Please select a user');
                    return;
                }

                const formData = new FormData();
                formData.append('userId', userId);
                formData.append('isOwner', isOwner);

                fetch(`/boards/${boardUserManagementBoardId}/users`, {
                    method: 'POST',
                    body: formData
                })
                    .then(r => {
                        if (r.ok) {
                            form.reset();
                            clearUserSelection();
                            loadBoardMembers(boardUserManagementBoardId);
                        } else {
                            return r.json().then(err => {
                                alert('Error: ' + (err.title || 'Failed to add user'));
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Failed to add user');
                    });
            });
        }
    });
</script>

