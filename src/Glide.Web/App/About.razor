@using System.Reflection
@using Glide.Web.Features.Shared
<HtmxLayout Title="About" BodyClass="about-page" ShowNavBar="true">
    <main>
        <div class="page-header">
            <h2>About Glide</h2>
        </div>
        <div class="content-section">
            <p><strong>Glide</strong> is a simple and elegant Kanban board management system.</p>

            <h3 style="margin-top: 2rem; color: var(--text-bright);">Version</h3>
            <p>Version @AppVersion</p>

            <h3 style="margin-top: 2rem; color: var(--text-bright);">Resources</h3>
            <p>Documentation and help resources coming soon.</p>

            <a href="/dashboard" class="btn-primary" style="margin-top: 1rem; display: inline-block;">Back to
                Dashboard</a>
        </div>
    </main>
</HtmxLayout>

@code {
    private string AppVersion
    {
        get
        {
            var version = Assembly.GetExecutingAssembly().GetName().Version;
            return version?.ToString(3) ?? "Unknown";
        }
    }
}
