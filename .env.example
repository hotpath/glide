# Glide OAuth Configuration
# Copy this file to .env and fill in your OAuth provider credentials

# OAuth Provider (e.g., GitHub, Forgejo)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_AUTHORIZE_URL=https://github.com/login/oauth/authorize
OAUTH_TOKEN_URL=https://github.com/login/oauth/access_token
OAUTH_USER_INFO_URL=https://api.github.com/user
OAUTH_REDIRECT_URI=http://localhost:8080/auth/callback

# Database
GLIDE_DATABASE_PATH=data/glide.db
GLIDE_PORT=5258

# Session Configuration
SESSION_DURATION_HOURS=720
